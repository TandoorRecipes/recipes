{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue","src/**/*.ts","src/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "webworker"], // extend to add webworker lib
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
